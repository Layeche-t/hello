{% set url =  path('ads_show', {'slug': ad.slug}) %}
<div class="col-md-4">
	<div class="card bg-light mb-3">
		<div class="card-header text-center">
			{{ ad.rooms }}
			chambre,
			<strong>{{ ad.price }}&euro; / nuit</strong>
			<br>
			<small>Pas encore not√©</small>
		</div>
		<a href="{{ ad.slug }}">
			<img src="{{ ad.coverImage }}" alt="Image de l'appartement" style="height: 250px; width: 100%; display: block">
		</a>

		<div class="card-body">
			<h4 class="card-title">
				<a href="{{ ad.slug }}">
					{{ ad.title }}
				</a>
			</h4>
			<p class="card-text">
				{{ ad.introduction }}
			</p>

			<a href="{{ ad.slug }}" class="btn btn-secondary">En savoir plus !</a>
			{% if app.user and app.user == ad.author %}
				<a href="{{ path('ads_edit', {'slug' : ad.slug })}}" class="btn btn-secondary">Modifier l'annonce</a>
			{% endif %}
		</div>
	</div>

</div>
